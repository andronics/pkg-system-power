#!/usr/bin/env zsh

name=$(basename $0)

# ------------------------------

source $(which _log)
source $(which _rofi)
source $(which _string)
source "$(which _xdg)" >/dev/null 2>&1 || true

# ------------------------------

# Setup XDG directories using extension library
xdg-setup-dirs "${name}"

# Backward-compatible aliases for power-specific variables
power_cache_dir="${XDG_CACHE_DIR}"
power_config_dir="${XDG_CONFIG_DIR}"
power_data_dir="${XDG_DATA_DIR}"

# ------------------------------

rofi_config="${power_data_dir}/theme.rasi"

# ------------------------------

power_options=("Reboot\nShutdown\nSuspend\nLock\nLogout")

# ------------------------------

_power() {

    _option=$(echo  "${power_options}" | rofi-prompt -m "Power Menu" | string-lowercase)

    
    [[ -n ${_option} ]] || {

        log-info "no option selected"
        exit 1

    }
    
    log-info "option selected is '${_option}'"
    
    case ${_option} in
        
        shutdown) systemctl poweroff ;;
        reboot) systemctl reboot ;;
        lock) betterlockscreen -l ;;
        suspend) systemctl suspend ;;
        logout)  bspc quit ;;

        *) log-warning "option '%s' unsupported" "${_option}" ;;

    esac

}

# ------------------------------

_power "$@"